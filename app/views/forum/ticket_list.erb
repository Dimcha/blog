<%= link_to b_add + 'Add new ticket', :action => "ticket_new", :id => @category.id %>
<br/>
<br/>
<% if @tickets.to_a.size > 0 %>
  <table class="maintable">
    <tr>
      <th>ID</th>
      <th>Summary</th>
      <th>Comments</th>
      <th>Status</th>
      <th>Created at</th>
      <th></th>
    </tr>
    <% @tickets.each do |t| %>
      <tr>
        <td><%= t.id %></td>
        <td><%= link_to t.summary, :action => "ticket", :id => t.id %></td>
        <td><%= t.comment_number %></td>
        <td><%= t.resolution %></td>
        <td><%= t.ticket_start.to_time.strftime("%Y-%m-%d %H:%M:%S") if t.ticket_start %></td>
        <td><%= link_to 'Delete', {:action => "ticket_destroy", :id => t.id}, :method => :post %></td>
      </tr>
    <% end %>
  </table>
  <br/>
<% end %>
<%= button_to "Back", {action: "categories"}, method: "get" %>