<%= form_for :user, url: {action: 'create'} do |u| %>
    <% @user.errors.each do |attribute, error| %>
      <div class="error">
        <%= attribute.to_s.capitalize + ": " + error %>
      </div>
    <% end %>
    <%= render "#{@user.current_step}_step", :u => u %>
    <p>
      <%= u.submit "Continue" %>
      <%= u.submit "Cancel", name: "cancel" if @user.first_step? %>
      <%= u.submit "Back", name: "back_button" unless @user.first_step? %>
    </p>
<% end %>